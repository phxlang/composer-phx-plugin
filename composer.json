{
    "name": "phxlang/composer-phx-plugin",
    "license": "MIT",
    "type": "composer-plugin",
    "description": "Loads PHX files",
    "minimum-stability": "alpha",
    "prefer-stable": true,
    "require": {
        "composer-plugin-api": "^1.1",
        "phxlang/phx": "^1.0.0"
    },
    "require-dev": {
        "composer/composer": "^1.5.0"
    },
    "autoload": {
        "psr-4": {
            "Phx\\Composer\\": "src/"
        }
    },
    "extra": {
        "class": "Phx\\Composer\\PhxComposerPlugin"
    }
}