{
    "name": "phx/composer-phx-plugin",
    "license": "MIT",
    "type": "composer-plugin",
    "description": "Loads PHX files",
    "repositories": [
        {
            "type": "path",
            "url": "../phx"
        }
    ],
    "require": {
        "composer-plugin-api": "^1.1",
        "phx/phx": "dev-composer-2nd-try"
    },
    "require-dev": {
        "composer/composer": "^1.5.0"
    },
    "autoload": {
        "psr-4": {
            "Phx\\Composer\\": "src/"
        }
    },
    "extra": {
        "class": "Phx\\Composer\\PhxComposerPlugin"
    }
}